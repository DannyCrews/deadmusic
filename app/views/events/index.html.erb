<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<h1>Grateful Dead - On The Road</h1>
<div class="pull-left" style='width:680px;'>
  <div id="map" style='width:680px; height: 315px;'></div>
</div>

<div class="pull-right">
<p><iframe width="410" height="315" src="http://youtube.com/embed/ZZ2JUjYcroc" frameborder="0" allowfullscreen></iframe>
</div>

<br>
<br>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Venue</th>
      <th>URL</th>
      <th>City</th>
      <th>State</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
   <div class="event-list" <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.venue %></td>
        <td><%= event.url %></td>
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= link_to 'Show', event %> </td>
      </tr>
    <% end %>
    </div>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>


<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>